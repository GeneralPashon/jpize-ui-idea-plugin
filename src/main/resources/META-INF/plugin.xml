<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>online.generalpashon.jpize-ui-idea-plugin</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>JPUI Syntax Highlighting</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="goloborodkojava@gmail.com" url="https://generalpashon.online">GeneralPashon</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    Jpize-Engine UI markup language syntax highlight plugin.
    <img src="preview.png"><\img>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="JPUI File"
                implementationClass="online.generalpashon.jpizeuihighlighter.lang.JpuiFileType"
                fieldName="INSTANCE"
                language="JPUI"
                extensions=".jpui"/>

        <lang.syntaxHighlighterFactory
                language="JPUI"
                implementationClass="online.generalpashon.jpizeuihighlighter.highlighter.JpuiHighlighterFactory"/>

        <lang.parserDefinition
                language="JPUI"
                implementationClass="online.generalpashon.jpizeuihighlighter.parser.JpuiParserDefinition"/>

        <completion.contributor
                language="JPUI"
                implementationClass="online.generalpashon.jpizeuihighlighter.codecompletion.JpuiCompletionContributor"/>

        <!-- Commenter -->
        <!-- <lang.commenter language="JPUI" implementationClass="online.generalpashon.jpizeuihighlighter.JpuiCommenter"/>  -->

        <!-- Brace Matcher -->
        <!-- <lang.braceMatcher language="JPUI" implementationClass="online.generalpashon.jpizeuihighlighter.JpuiBraceMatcher"/> -->

        <!-- Quote Handlers -->
        <!-- <lang.quoteHandler language="JPUI" implementationClass="online.generalpashon.jpizeuihighlighter.JpuiQuoteHandler"/> -->

        <!-- Annotator -->
        <!-- <annotator language="JPUI" implementationClass="online.generalpashon.jpizeuihighlighter.JpuiAnnotator"/> -->

    </extensions>
</idea-plugin>